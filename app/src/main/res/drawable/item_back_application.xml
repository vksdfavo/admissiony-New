<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/hint"> <!-- Ripple color -->

    <!-- Mask item with border -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <size
                android:width="24dp"
                android:height="24dp" />
            <stroke
                android:color="@color/appSecondaryColor"
            android:width="1dp" /> <!-- Border width -->
        </shape>
    </item>

    <!-- Background item with border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <size
                android:width="24dp"
                android:height="24dp" />
            <stroke
                android:color="@color/appSecondaryColor"
            android:width="1dp" /> <!-- Border width -->
        </shape>
    </item>
</ripple>
