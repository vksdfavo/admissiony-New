<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#EBF8FF" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional inner padding -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />

    <!-- Optional soft border -->
    <stroke
        android:width="1dp"
        android:color="#CCE8F5" />

</shape>
