<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Ripple effect with a solid color -->
    <item>
        <ripple android:color="#E7E7E7"> <!-- Ripple color -->
            <item android:id="@android:id/background"> <!-- Background color -->
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" /> <!-- Solid green color -->
                    <corners android:radius="36dp" /> <!-- Rounded corners -->
                </shape>
            </item>
        </ripple>
    </item>

    <!-- Stroke around the solid color -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/btnColorGreen" /> <!-- Green stroke color -->
            <corners android:radius="36dp" />
        </shape>
    </item>

</layer-list>
