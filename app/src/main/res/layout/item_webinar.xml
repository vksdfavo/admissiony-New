<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="12dp"
    android:layout_margin="10dp"
    android:background="@drawable/shape_rectangle_all_radius_et_login"
    android:elevation="4dp">

    <!-- Event Title -->
    <TextView
        android:id="@+id/tv_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:maxLines="2" />

    <!-- Timer -->
    <TextView
        android:id="@+id/timer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:09:51"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/tv_event_name" />

    <!-- Flag -->
    <ImageView
        android:id="@+id/IV_country"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/timer_label"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:src="@drawable/flag_india"
        android:padding="3dp"
        android:contentDescription="Country Flag" />

    <!-- Join Button -->
    <TextView
        android:id="@+id/btnJoins"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:text="Join"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/secondary_color"
        android:elevation="3dp"
        android:gravity="center"
        android:background="@drawable/shape_rectangle_all_radius_btn_gradient"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp" />

    <!-- Online + Webinar -->
    <LinearLayout
        android:id="@+id/online_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_event_name"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/IV_country"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvOnline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/webinars"
            android:drawablePadding="6dp"
            android:text="Online"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/viewAllTextColor" />


        <TextView
            android:id="@+id/tvlink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:drawableEnd="@drawable/copybtn"
            android:drawablePadding="6dp"
            android:drawableTint="#1A73E8"
            android:text="Webinar Link"
            android:textColor="#1A73E8"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text=""
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:layout_below="@id/online_section"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content">
        <!-- Host -->
        <TextView
            android:id="@+id/tvhost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:layout_gravity="center"
            android:text="Host"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/viewAllTextColor"
            app:drawableStartCompat="@drawable/people" />

        <!-- Host Name -->
        <TextView
            android:id="@+id/tvhostName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="test"
            android:textSize="12sp"
            android:textColor="@color/viewAllTextColor" />
    </LinearLayout>


    <!-- Date-Time (Moved to Bottom) -->
    <TextView
        android:id="@+id/tv_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="6dp"
        android:drawablePadding="6dp"
        android:layout_marginEnd="@dimen/space5"
        android:gravity="center"
        android:maxLines="2"
        android:drawableTint="#1A73E8"
        android:text="02 May, 5:56 PM to 02 May, 6:56 PM"
        android:textSize="11sp"
        android:textColor="@color/viewAllTextColor"
        app:drawableStartCompat="@drawable/ic_calender" />

    <TextView
        android:id="@+id/end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date_time"
        android:layout_alignParentStart="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="@dimen/space5"
        android:drawablePadding="6dp"
        android:drawableTint="#1A73E8"
        android:gravity="center"
        android:maxLines="2"
        android:text="02 May, 5:56 PM to 02 May, 6:56 PM"
        android:textColor="@color/viewAllTextColor"
        android:textSize="11sp"
        app:drawableStartCompat="@drawable/ic_calender" />

</RelativeLayout>
