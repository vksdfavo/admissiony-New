<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_5"
        android:layout_height="@dimen/dp_110"
        android:background="@drawable/stroke_back_offer"
        android:orientation="vertical"
         >

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canterbury Christ Church University"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:paddingEnd="@dimen/_10dp"
        android:layout_marginTop="@dimen/_10dp"
        android:paddingStart="@dimen/_10dp"
        android:paddingBottom="@dimen/_10dp"
        android:textStyle="bold" />

    <TextView
          android:id="@+id/tvDescription"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's kerala students."
           android:textColor="@color/black"
           android:textSize="10sp"
            android:maxLines="3"
            android:paddingEnd="@dimen/_10dp"
           android:paddingStart="@dimen/_10dp"
           android:paddingBottom="@dimen/_10dp"
           android:layout_marginEnd="16dp"
        />

</LinearLayout>

    </LinearLayout>
