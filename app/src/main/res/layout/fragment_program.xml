<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ablFd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civProfileImageFd2"
                        android:layout_width="36dp"
                        android:visibility="gone"
                        android:layout_height="36dp"
                        android:elevation="2dp"
                        android:src="@drawable/test_image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/programs"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabFp_heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="4dp"
                        android:layout_toStartOf="@id/fabFp_notificationStu"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/ic_heart"
                        app:borderWidth="0dp"
                        app:elevation="0dp"
                        app:fabCustomSize="32dp"
                        app:maxImageSize="20dp"
                        app:rippleColor="@color/hint"
                        app:tint="@color/tintColorToolbar" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabFp_heart2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="4dp"
                        android:layout_toStartOf="@id/fabFp_notificationStu"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/ic_heart2"
                        android:visibility="gone"
                        app:borderWidth="0dp"
                        app:elevation="0dp"
                        app:fabCustomSize="32dp"
                        app:maxImageSize="20dp"
                        app:rippleColor="@color/hint" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabFp_notificationStu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/ic_notification"
                        app:borderWidth="0dp"
                        app:elevation="0dp"
                        app:fabCustomSize="32dp"
                        app:maxImageSize="21dp"
                        app:rippleColor="@color/hint"
                        app:tint="@color/tintColorToolbar" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civFp_unreadBadge"
                        android:visibility="gone"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="3dp"
                        android:elevation="2dp"
                        android:src="@drawable/shape_circle_red" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="4dp"
                    android:layout_toStartOf="@id/fabFpFilterStart"
                    android:background="@drawable/shape_rectangle_all_radius_et_search">

                    <EditText
                        android:id="@+id/etFp_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="-4dp"
                        android:layout_toStartOf="@id/ibFp_search"
                        android:backgroundTint="@color/white"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:hint="Search"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/hintApp"
                        android:textCursorDrawable="@drawable/cursor_black_et"
                        android:textSize="13sp" />

                    <ImageButton
                        android:id="@+id/ibFp_search"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/shape_rectangle_all_radius_btn_search"
                        android:padding="8dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/white" />
                </RelativeLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabFpFilterStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/white"
                    android:elevation="0dp"
                    android:src="@drawable/ic_filter"
                    app:backgroundTint="#151522"
                    app:borderWidth="1dp"
                    app:elevation="0dp"
                    app:fabCustomSize="36dp"
                    app:maxImageSize="16sp"
                    app:rippleColor="@color/hint" />


                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tlFh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl1"
                    android:layout_marginTop="8dp"
                    app:tabIndicatorColor="@color/tabIndicatorBackgroundColor"
                    app:tabIndicatorHeight="2dp"
                    app:tabMode="fixed"
                    android:background="@color/white"
                    app:tabSelectedTextColor="@color/black"
                    app:tabTextAppearance="@style/CustomTabLayout"
                    app:tabTextColor="@color/viewAllTextColor">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recommended" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all_programs" />
                </com.google.android.material.tabs.TabLayout>
            </RelativeLayout>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ablFd"
        android:background="@color/dividerBackgroundColor" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpFp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ablFd" />
</RelativeLayout>