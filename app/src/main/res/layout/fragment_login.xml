<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.login.LoginFragment">

    <ScrollView
        android:id="@+id/llRootLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingStart="26dp"
        android:paddingTop="26dp"
        android:paddingEnd="26dp"
        android:layout_centerInParent="true"
        android:fillViewport="true"
        android:paddingBottom="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/logo_width"
                android:layout_height="@dimen/logo_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="22dp"
                android:src="@drawable/firmli_logo"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvTitleLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/log_in_to_firmli_s_staff"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSubtitleLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/please_enter_your_credentials_to_securely_log_in_to_your_firmli_s_staff_account"
                android:textColor="@color/text_color"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/llLa_mobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="emailAddress"
                    android:background="@drawable/shape_rectangle_all_radius_et_login"
                    android:gravity="center_vertical"
                    android:hint="@string/example_frimli_com"
                    android:focusable="true"
                    android:inputType="textEmailAddress"
                    android:paddingStart="14dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="15dp"
                    android:textCursorDrawable="@drawable/custom_cursor"
                    android:textSize="13sp"
                    tools:ignore="TextFields" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEnterPasscode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_rectangle_all_radius_et_login">

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="46dp"
                        android:background="@color/blank"
                        android:gravity="center_vertical"
                        android:hint="@string/hint"
                        android:importantForAutofill="no"
                        android:inputType="textPassword"
                        android:paddingStart="14dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="0dp"
                        android:paddingBottom="14dp"
                        android:textCursorDrawable="@drawable/custom_cursor"
                        android:textSize="13sp" />

                    <ImageButton
                        android:id="@+id/ibShowPasscode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="14dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_hide_password"
                        tools:ignore="ContentDescription" />

                    <ImageButton
                        android:id="@+id/ibHidePasscode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="14dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_hide_password"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvForgotPasscode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:foreground="@drawable/ripple"
                    android:padding="@dimen/space5"
                    android:background="@drawable/shape_rectangle_pressed_white"
                    android:text="@string/forgot_passcode"
                    android:textSize="13sp"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvSp2_save"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_rectangle_all_radius_btn_yellow"
                android:elevation="2dp"
                android:gravity="center"
                android:foreground="@drawable/ripple"
                android:padding="12dp"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvAccept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:justificationMode="inter_word"
                android:text="@string/byClicking"
                android:textSize="12sp" />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>