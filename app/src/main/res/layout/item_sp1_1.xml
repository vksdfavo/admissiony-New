<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvItemSp2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space30"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/space8"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/space8"
        android:layout_marginEnd="@dimen/space8"
        android:layout_marginBottom="@dimen/space8"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="#212121" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tvItemSp2"
        android:background="#E6E6E6" />

    <ImageView
        android:id="@+id/selected_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:elevation="2dp"
        />
</RelativeLayout>
