<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- Custom Header -->
    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="12dp"
        android:text="Update Status"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Reason List -->
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space10"
        android:layout_below="@+id/tvDialogTitle"
        android:layout_marginVertical="@dimen/space10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/space10"
                android:layout_marginTop="@dimen/space10"
                android:layout_weight="1"
                android:text="Status"
                android:textColor="@color/black"
                android:textSize="@dimen/space16" />





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">


            <Spinner
                android:id="@+id/status_data"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space50"
                android:layout_marginHorizontal="@dimen/space10"
                android:layout_marginEnd="@dimen/space5"
                android:layout_marginBottom="@dimen/space5"
                android:layout_weight="1"
                android:background="@drawable/shape_rectangle_all_radius_et_login" />



        </LinearLayout>

    </LinearLayout>

    <!-- Buttons Layout -->
    <LinearLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/ll1"
        android:weightSum="1"
        android:paddingTop="8dp">



        <Button
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/report_btn"
            android:text="Update Status"

            android:textColor="@android:color/black" />
    </LinearLayout>

</RelativeLayout>
