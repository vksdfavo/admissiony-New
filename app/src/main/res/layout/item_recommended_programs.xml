<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvBase"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rlBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_strock"
        android:padding="10dp">

        <!-- College Image -->
        <ImageView
            android:id="@+id/iv"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ztest_college"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/favContainer" />

        <!-- Heart/Favorite Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/favContainer"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toTopOf="@id/iv"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/ibHeart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    android:src="@drawable/ic_heart"
                    app:tint="@color/tintColorToolbar" />

                <ImageButton
                    android:id="@+id/ibHeart2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    android:src="@drawable/ic_heart2"
                    android:visibility="gone" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Divider Line -->
        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/hint"
            app:layout_constraintTop_toBottomOf="@id/iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Program Name -->
        <TextView
            android:id="@+id/tvApd_collegeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingHorizontal="4dp"
            android:text="B.A. in Classical Studies"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- College Name -->
        <TextView
            android:id="@+id/tvCollege"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            android:text="Bow Valley College"
            android:textColor="@color/viewAllTextColor"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tvApd_collegeName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Location -->
        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:drawablePadding="4dp"
            android:text="Canada"
            android:textColor="@color/viewAllTextColor"
            android:textSize="11sp"
            app:drawableStartCompat="@drawable/ic_location"
            app:layout_constraintTop_toBottomOf="@id/tvCollege"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
