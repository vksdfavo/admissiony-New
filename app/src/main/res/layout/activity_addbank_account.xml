<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Scout.activities.AddBankAccountActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ablSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabBi_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="6dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_back"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    app:fabCustomSize="32dp"
                    app:maxImageSize="16dp"
                    app:rippleColor="@color/rippleColor"
                    app:tint="@color/tintColorToolbar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/add_bank_account"
                    android:textColor="@color/tintColorToolbar"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12sp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_edit"
                    android:visibility="gone"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    app:fabCustomSize="32dp"
                    app:maxImageSize="20sp"
                    app:rippleColor="@color/rippleColor"
                    app:tint="@color/tintColorToolbar" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/ablSelect"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selectCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space10"
                android:layout_marginTop="@dimen/space10"
                android:text="@string/select_country"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space50"
                android:layout_below="@id/selectCountry"
                android:layout_marginHorizontal="@dimen/space10"
                android:background="@drawable/shape_rectangle_all_radius_et_login"
                android:hint="@string/select_country"
                android:padding="@dimen/sp_10" />

            <LinearLayout
                android:id="@+id/formContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space10"
                android:layout_below="@id/country"
                android:layout_marginBottom="@dimen/_10dp"
                android:orientation="vertical">


            </LinearLayout>


            <LinearLayout
                android:id="@+id/llFpAp_noData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/bank" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/no_bank_account_added_yet"
                    android:textColor="#151522"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/kindly_add_bank_account_detail"
                    android:textColor="#151522"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/add_country"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/no_bank_back_button"
                    android:text="@string/please_select_country_first"
                    android:textColor="#151522"
                    android:textSize="12sp"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    tools:ignore="UseCompatTextViewDrawableXml" />


            </LinearLayout>

            <TextView
                android:id="@+id/btn_add_account"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_rectangle_all_radius_btn_yellow"
                android:elevation="2dp"
                android:visibility="gone"
                android:layout_marginHorizontal="@dimen/dp_80"
                android:foreground="@drawable/ripple"
                android:gravity="center"
                android:padding="12dp"
                android:layout_below="@id/formContainer"
                android:text="@string/add_bank_account"
                android:textAllCaps="false"
                android:textColor="@color/white" />


        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>