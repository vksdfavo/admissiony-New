<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/dp_15"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_cross"
                app:tint="@color/disabledTextColor" />

            <TextView
                android:id="@+id/tvDialogTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Create Counselling"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

            <ImageView
                android:id="@+id/tv_dismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:visibility="gone"
                android:src="@drawable/ic_cross"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/hint"
            android:layout_below="@+id/rll1"
            />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >



        <!-- Reason List -->
        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10dp"
            android:background="@drawable/shape_rectangle_all_radius_et_login"
            >

        <TextView
            android:id="@+id/tvAssignedTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space10"
            android:layout_marginTop="@dimen/space10"
            android:text="Assigned to"
            android:textColor="@color/black"
            android:textSize="@dimen/space16"
            android:gravity="center"/>

        <RadioGroup
            android:id="@+id/rgAssignedto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHasNextFollowUp"
            android:layout_marginHorizontal="@dimen/space10"
            android:layout_marginTop="@dimen/space10"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rbMySelf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Myself"
                android:layout_marginEnd="@dimen/space30"/>

            <RadioButton
                android:id="@+id/rbDestinationManager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination Manager"/>
        </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space10"
            android:layout_below="@+id/ll2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/space10"
                    android:layout_marginTop="@dimen/space10"
                    android:layout_weight="1"
                    android:text="Destination Manager"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/et_destination_manager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space45"
                    android:layout_marginHorizontal="@dimen/space10"
                    android:layout_marginEnd="@dimen/space5"
                    android:layout_marginBottom="@dimen/space5"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:hint="Select"
                    android:textSize="12sp"
                    android:paddingStart="@dimen/_10dp"
                    android:background="@drawable/shape_rectangle_all_radius_et_login" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space10"
            android:layout_below="@+id/ll23"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/space10"
                    android:layout_marginTop="@dimen/space10"
                    android:layout_weight="1"
                    android:text="Schedule At"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/et_datetimepicker"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space45"
                    android:layout_marginHorizontal="@dimen/space10"
                    android:layout_marginEnd="@dimen/space5"
                    android:layout_marginBottom="@dimen/space5"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:hint="Select"
                    android:textSize="12sp"
                    android:paddingStart="@dimen/_10dp"
                    android:background="@drawable/shape_rectangle_all_radius_et_login" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space10"
            android:layout_below="@+id/ll3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/space10"
                    android:layout_marginTop="@dimen/space10"
                    android:layout_weight="1"
                    android:text="Destination Country"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/et_destination_country"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space45"
                    android:layout_marginHorizontal="@dimen/space10"
                    android:layout_marginEnd="@dimen/space5"
                    android:layout_marginBottom="@dimen/space5"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:hint="Select "
                    android:textSize="12sp"
                    android:paddingStart="@dimen/_10dp"
                    android:background="@drawable/shape_rectangle_all_radius_et_login" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space10"
            android:layout_below="@+id/ll4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/space10"
                    android:layout_marginTop="@dimen/space10"
                    android:layout_weight="1"
                    android:text="Meeting link"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/et_meetinglink"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space45"
                    android:layout_marginHorizontal="@dimen/space10"
                    android:layout_marginEnd="@dimen/space5"
                    android:layout_marginBottom="@dimen/space5"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:hint="https://abdann.com"
                    android:paddingStart="@dimen/_10dp"
                    android:background="@drawable/shape_rectangle_all_radius_et_login" />
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll5">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remarks"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/et_remarks"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/tv"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/shape_rectangle_all_radius_et_login"
                android:gravity="top"
                android:hint="Write something here"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:paddingHorizontal="14sp"
                android:paddingVertical="12dp"
                android:textSize="13sp" />


        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_below="@+id/rv"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/btn_create"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:background="@drawable/button_background_update"
                android:text="Create"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white"/>
        </LinearLayout>
        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>


</RelativeLayout>