<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_height="@dimen/dp_80">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="@dimen/space50"
                android:background="@drawable/shape_circle_green"
                android:backgroundTint="#F1D993"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_height="@dimen/space50">

                <ImageView
                    android:layout_width="30dp"
                    android:src="@drawable/student"
                    android:layout_centerInParent="true"
                    android:layout_height="30dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/students"
                android:layout_width="wrap_content"
                android:text="Students"
                android:layout_marginStart="@dimen/_10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/space16"
                android:layout_toRightOf="@id/relativeLayout"
                android:layout_marginTop="@dimen/_10dp"
                android:gravity="center"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="213456"
                android:layout_below="@id/students"
                android:textSize="@dimen/space14"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_toRightOf="@id/relativeLayout"
                android:gravity="center"
                android:layout_height="wrap_content"/>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
