<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".fragments.login.VerifyOtpFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space50">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/back" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/verify_otp"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_codeSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:singleLine="false"
        android:text="@string/a_6_digit_verification_code_has_been_sent_to_n9u738338838"
        android:textColor="#162534"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et1Verify"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:autofillHints="smsOTPCode"
            android:hint="-"
            android:background="@drawable/shape_rectangle_all_radius_et_login"
            android:gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:importantForAutofill="yes"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et2Verify"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:hint="-"
            android:autofillHints="smsOTPCode"
            android:background="@drawable/shape_rectangle_all_radius_et_login"
            android:gravity="center"
            android:importantForAutofill="yes"
            android:inputType="number"
            android:focusable="true"
            android:maxLength="1"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et3Verify"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:hint="-"
            android:autofillHints="smsOTPCode"
            android:background="@drawable/shape_rectangle_all_radius_et_login"
            android:gravity="center"
            android:importantForAutofill="yes"
            android:inputType="number"
            android:focusableInTouchMode="true"
            android:maxLength="1"
            android:focusable="true"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et4Verify"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:autofillHints="smsOTPCode"
            android:background="@drawable/shape_rectangle_all_radius_et_login"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:hint="-"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:importantForAutofill="yes"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/et5Verify"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:autofillHints="smsOTPCode"
            android:background="@drawable/shape_rectangle_all_radius_et_login"
            android:gravity="center"
            android:hint="-"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:importantForAutofill="yes"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="14sp" />

       <EditText
        android:id="@+id/et6Verify"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:autofillHints="smsOTPCode"
        android:background="@drawable/shape_rectangle_all_radius_et_login"
        android:gravity="center"
        android:hint="-"
           android:layout_marginEnd="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:importantForAutofill="yes"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="14sp" />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_rectangle_all_radius_btn_yellow"
        android:elevation="2dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/verify_amp_continue"
        android:layout_marginHorizontal="@dimen/dp_30"
        android:textAllCaps="false"
        android:backgroundTint="@color/secondary_color"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textview123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/haven_t_received_a_code"
            android:textColor="#162534"
            android:textSize="12sp" />



        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_gravity="center"
            android:text="01:11"
            android:textStyle="bold"
            android:textColor="@color/secondary_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Resend"
            android:layout_marginStart="@dimen/space5"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

    </LinearLayout>


</LinearLayout>