<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onBoardingScreen.OnBoardingActivity">

    <!--    -->
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="1dp">

        <!--        -->
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--        -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/progress_bar_background"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progress_bar_drawable" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_next"
                app:backgroundTint="@color/theme_color"
                app:borderWidth="0dp"
                app:rippleColor="@color/white"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvGetStarted"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="26dp"
                android:layout_marginVertical="16dp"
                android:background="@drawable/shape_rectangle_all_radius_btn_yellow"
                android:elevation="1dp"
                android:gravity="center"
                android:padding="12dp"
                android:text="Get Started"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="invisible" />

        </RelativeLayout>

        <!--        -->
        <LinearLayout
            android:id="@+id/llOb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:paddingBottom="26dp"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanks for downloading "
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dfavo"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

    <!--    -->
    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/indicatorOb"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_above="@id/rl1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:elevation="1dp"
        app:ci_drawable="@drawable/indicator_selected"
        app:ci_drawable_unselected="@drawable/indicator_unselected" />

    <!--    -->
    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/indicatorOb"
        android:layout_below="@id/tvSkip"
        android:layout_marginHorizontal="26dp"
        android:paddingBottom="0dp"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/ivObP1_vector"
            android:layout_width="wrap_content"
            android:layout_height="330dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@drawable/z_page1" />

        <TextView
            android:id="@+id/tvObP1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivObP1_vector"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Select Your Favourite\nCourse &amp; Apply"
            android:textColor="#212121"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvObP1_title"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/sf_light"
            android:gravity="center"
            android:text="Dfavo, a Norway based EdTech, a unique platform to empower the international student recruitment industry by providing tools, expertise."
            android:textColor="#666666"
            android:textSize="14sp" />
    </RelativeLayout>

    <!--    -->
    <TextView
        android:id="@+id/tvSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:text="Skip"
        android:textColor="#666666"
        android:textSize="14sp"
        android:visibility="invisible" />

    <!--    -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>