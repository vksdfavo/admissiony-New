<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:elevation="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_margin="@dimen/space5"
        android:background="@drawable/shape_rectangle_all_radius_et_login">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="@dimen/space15"
            android:elevation="2dp"
            android:src="@drawable/test_image"
            app:civ_border_color="@color/theme_color"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sarah_johnson"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_toEndOf="@id/profile_image"
            android:textColor="@color/black"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_message"
            android:layout_toEndOf="@id/profile_image"
            android:layout_below="@id/name"
            android:layout_gravity="center"
            android:textColor="@color/text_color"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:text="10:10 am"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_below="@id/name"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_gravity="center"
            android:textColor="@color/text_color"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>