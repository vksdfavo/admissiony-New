<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:elevation="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_margin="@dimen/space5"
        android:background="@drawable/shape_rectangle_all_radius_et_login">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="@dimen/space15"
            android:elevation="2dp"
            android:src="@drawable/test_image"
            app:civ_border_color="@color/theme_color"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sarah_johnson"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_toEndOf="@id/profile_image"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/college"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bow_valley_college_e"
            android:layout_below="@id/name"
            android:layout_toEndOf="@id/profile_image"
            android:layout_gravity="center"
            android:textColor="@color/text_color"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/linear_intake_fee"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/status_background"
            android:backgroundTint="#A7ECF1F2"
            android:layout_below="@id/college"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="@dimen/dp_5"
            android:layout_marginTop="5dp"
            android:weightSum="2"
            android:layout_height="50dp">


            <TextView
                android:id="@+id/last_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_message"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:textColor="@color/text_color"
                android:textSize="12sp" />

        </LinearLayout>




        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:text="10:10 am"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10dp"
            android:textColor="@color/text_color"
            android:textSize="12sp" />


    </RelativeLayout>
</LinearLayout>