<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0.7dp"
    android:layout_marginBottom="0.7dp"
    android:background="@drawable/shape_rectangle_pressed_white">

    <ImageButton
        android:id="@+id/ibHeart"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="5dp"
        android:visibility="gone"
        android:scaleType="centerInside"
        android:src="@drawable/ic_heart"
        app:elevation="2dp"
        app:tint="@color/tintColorToolbar" />

    <ImageButton
        android:id="@+id/ibHeart2"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:src="@drawable/ic_heart2"
        app:elevation="2dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="4dp"
        android:paddingBottom="12dp">


        <CheckBox
            android:id="@+id/cb_program_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:button="@drawable/checkbox"
            android:scaleType="centerCrop"
            android:theme="@style/CheckBox"
        />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_next2"
            app:tint="@color/tintColorToolbar" />

        <ImageView
            android:id="@+id/ivItemProgramRecom"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/cb_program_select"
            android:background="@drawable/shape_rectangle_all_radius_et_login"
            android:scaleType="centerCrop"
            android:src="@drawable/z_ma" />

        <TextView
            android:id="@+id/tvApd_programName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="48dp"
            android:layout_toEndOf="@id/ivItemProgramRecom"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="B.A. in classical studies"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvIADetail_intake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvApd_programName"
            android:layout_alignStart="@id/tvApd_programName"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@id/iv"
            android:drawablePadding="4dp"
            android:text="Acadia University"
            android:textSize="10sp"
            app:drawableStartCompat="@drawable/ic_college_small" />

        <TextView
            android:id="@+id/ivItemProgramRecomCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvIADetail_intake"
            android:layout_alignStart="@id/tvIADetail_intake"
            android:layout_marginTop="2dp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="Canada"
            android:textSize="10sp"
            app:drawableStartCompat="@drawable/ic_location" />

        <TextView
            android:id="@+id/tvSp2_ets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivItemProgramRecomCountry"
            android:layout_alignStart="@id/tvIADetail_intake"
            android:layout_marginTop="6dp"
            android:text="Tuition Fee"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/civItemAa_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvSp2_ets"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/tvSp2_ets"
            android:text="~ $19407 CAD"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSp2_ets"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/ivItemProgramRecom"
            android:text="Duration"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/ivItemProgramRecomDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv6"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/tv6"
            android:text="48 Months"
            android:textColor="@color/black"
            android:textSize="10sp" />
    </RelativeLayout>
</RelativeLayout>