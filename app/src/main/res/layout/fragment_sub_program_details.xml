<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.home.SubProgramDetails">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space10"
            android:elevation="4dp"
            android:layout_marginTop="@dimen/space10"
            android:layout_marginBottom="@dimen/space10"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:padding="@dimen/space10">

                <TextView
                    android:id="@+id/tv_applied"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/space5"
                    android:gravity="center"
                    android:padding="@dimen/space6"
                    android:textStyle="bold"
                    android:background="@drawable/ic_preference_back"
                    android:text="@string/applied"
                    android:layout_margin="@dimen/space10"
                    android:textSize="@dimen/sp_10"
                    />

                <TextView
                    android:id="@+id/tvApd_programName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_marginStart="@dimen/space10"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCampus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space10"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space10"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_tution_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space10"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tv_Application_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space10"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="12sp" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:background="@color/disabledTextColor"
                    android:layout_marginHorizontal="@dimen/space10"
                    android:layout_marginVertical="@dimen/space10"
                    android:layout_height="0.5dp"/>

                <TextView
                    android:id="@+id/click_view_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space10"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/view_details"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/PopUpcolorPrimary"
                    android:textSize="12sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>