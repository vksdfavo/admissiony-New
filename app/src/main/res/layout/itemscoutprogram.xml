<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/ibHeart"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_heart"
                app:elevation="2dp"
                app:tint="@color/tintColorToolbar" />

            <ImageButton
                android:id="@+id/ibHeart2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_heart2"
                android:visibility="gone"
                app:elevation="2dp" />

            <RelativeLayout
                android:id="@+id/relate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="4dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_next2"
                    app:tint="@color/tintColorToolbar" />

                <ImageView
                    android:id="@+id/ivItemProgramRecom"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_rectangle_all_radius_et_login"
                    android:scaleType="centerCrop"
                    android:src="@drawable/z_ma" />

                <TextView
                    android:id="@+id/tvApd_programName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="48dp"
                    android:layout_toEndOf="@id/ivItemProgramRecom"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="B.A. in classical studies"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvIADetail_intake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvApd_programName"
                    android:layout_alignStart="@id/tvApd_programName"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:layout_toStartOf="@id/iv"
                    android:drawablePadding="4dp"
                    android:text="Acadia University"
                    android:textSize="10sp"
                    app:drawableStartCompat="@drawable/ic_college_small" />

                <TextView
                    android:id="@+id/ivItemProgramRecomCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvIADetail_intake"
                    android:layout_alignStart="@id/tvIADetail_intake"
                    android:layout_marginTop="2dp"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:text="Canada"
                    android:textSize="10sp"
                    app:drawableStartCompat="@drawable/ic_location" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/ivItemProgramRecomCountry"
                    android:layout_alignStart="@id/tvIADetail_intake"
                    >
                    <TextView
                        android:id="@+id/tvSp2_ets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Tuition Fee"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/civItemAa_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/tvSp2_ets"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/tvSp2_ets"
                        android:layout_marginTop="5dp"
                        android:text="~ $19407 CAD"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvSp2_ets"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/ivItemProgramRecom"
                        android:text="Duration"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/ivItemProgramRecomDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/tv6"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/tv6"
                        android:text="12months"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                </LinearLayout>



            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:background="#D0CECE"
                android:layout_below="@id/relate"
                android:layout_height="1dp"/>





        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>