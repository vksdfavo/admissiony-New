                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="13dp"
                    android:gravity="end"
                    android:text="0-0"
                    android:textColor="@color/black"
                    android:textSize="13sp"
