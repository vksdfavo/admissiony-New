                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_marginEnd="3dp"
                    android:theme="@style/Theme.CustomMaterial3"
                    app:thumbColor="@color/appSecondaryColor"
                    app:thumbStrokeColor="@color/appSecondaryColor"
                    app:thumbStrokeWidth="1.5dp"
                    app:values="@array/initial_slider_values_1"
                    app:trackColorActive="@color/appSecondaryColor"
                    app:trackColorInactive="@color/hint"
                    app:trackHeight="2dp" />


                <TextView
                    android:id="@+id/tvFilter_rs11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="13dp"
                    android:gravity="end"
