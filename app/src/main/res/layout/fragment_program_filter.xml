                        android:paddingHorizontal="16dp"
                        android:paddingVertical="16dp"
                        android:hint="@string/select"
                        android:textSize="13sp"
                        app:drawableEndCompat="@drawable/ic_down" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvAccomodation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="13dp"
                    android:text="@string/accomodation"
                    android:textColor="#344955"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/rlAccomodation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:id="@+id/tvFilter_Accomodation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/shape_rectangle_all_radius_drop_down"
                        android:drawableTint="#151522"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="16dp"
                        android:hint="@string/select"
                        android:textSize="13sp"
                        app:drawableEndCompat="@drawable/ic_down" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvEnglishLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="13dp"
                    android:text="@string/english_level"
                    android:textColor="#344955"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/rlEnglishLevel"
                    android:layout_width="match_parent"
