                    android:layout_marginTop="6dp">

                    <TextView
                        android:id="@+id/tvFilter_EnglishLevel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/shape_rectangle_all_radius_drop_down"
                        android:drawableTint="#151522"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="16dp"
                        android:hint="@string/select"
                        android:textSize="13sp"
                        app:drawableEndCompat="@drawable/ic_down" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tvAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="13dp"
                    android:text="@string/age"
                    android:textColor="#344955"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/rlAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="80dp"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:id="@+id/tvFilter_Age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/shape_rectangle_all_radius_drop_down"
                        android:drawableTint="#151522"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="16dp"
                        android:hint="@string/select"
                        android:textSize="13sp"
                        app:drawableEndCompat="@drawable/ic_down" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvAttendance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="13dp"
                    android:text="@string/attendance"
                    android:textColor="#344955"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/rlAttendance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:id="@+id/tvFilter_Attendance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/shape_rectangle_all_radius_drop_down"
                        android:drawableTint="#151522"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="16dp"
                        android:hint="@string/select"
                        android:textSize="13sp"
                        app:drawableEndCompat="@drawable/ic_down" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvProgramType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="13dp"
                    android:text="@string/program_type"
                    android:textColor="#344955"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/rlProgramType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:id="@+id/tvFilter_programType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/shape_rectangle_all_radius_drop_down"
                        android:drawableTint="#151522"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="16dp"
                        android:hint="@string/select"
                        android:textSize="13sp"
                        app:drawableEndCompat="@drawable/ic_down" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tvTutionList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="13dp"
                    android:text="@string/tuition_fee_usd"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvFilter_rs1"
