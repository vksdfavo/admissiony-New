<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_5"
        android:layout_marginHorizontal="@dimen/space10"
        android:background="@drawable/card_strock"
        android:elevation="@dimen/dp_5">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_new"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="@dimen/dp_100"
            app:cardElevation="@dimen/space2">


            <ImageButton
                android:id="@+id/ibHeart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:src="@drawable/ic_heart"
                app:elevation="2dp"
                app:tint="@color/tintColorToolbar" />

            <ImageButton
                android:id="@+id/ibHeart2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:src="@drawable/ic_heart2"
                android:visibility="gone"
                app:elevation="2dp" />


        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/relate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="12dp"
            android:paddingEnd="4dp"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_next2"
                app:tint="@color/tintColorToolbar" />

            <ImageView
                android:id="@+id/ivItemProgramRecom"
                android:layout_marginTop="@dimen/space10"
                android:layout_width="25dp"
                android:visibility="gone"
                android:layout_height="25dp"
                android:layout_below="@+id/tvApd_programName"
                android:src="@drawable/home_one" />

            <TextView
                android:id="@+id/tvApd_programName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/space10"
                android:maxLines="2"
                android:text="B.A. in classical studies"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvApd_programName"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/space10"
                android:layout_toEndOf="@id/ivItemProgramRecom"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/home_one" />

                <TextView
                    android:id="@+id/tvIADetail_intake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_marginStart="@dimen/space10"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="marquee"
                    android:maxLength="25"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:text="Acadia University Acadia University "
                    android:textSize="12sp"
                   />



                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/space15"
                    android:src="@drawable/ic_location"
                    app:tint="@color/secondary_color" />

                <TextView
                    android:id="@+id/ivItemProgramRecomCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Canada"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_intake_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/light"
                android:padding="@dimen/dp_5"
                android:background="@drawable/status_background"
                android:backgroundTint="#A7ECF1F2"
                android:layout_marginHorizontal="@dimen/space5"
                android:layout_marginTop="@dimen/space15"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_toEndOf="@id/ivItemProgramRecom"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space10"
                        android:text="@string/tution_fee"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/civItemAa_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:maxLines="2"
                        android:text="~ $19407 CAD"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space10"
                        android:text="@string/duration"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/ivItemProgramRecomDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/relate"
            android:background="@color/card_color" />

        <RelativeLayout
            android:id="@+id/recycler_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/space10"
                android:layout_marginEnd="30dp"
                android:layout_toStartOf="@id/menu_applications"
                tools:itemCount="1"
                tools:listitem="@layout/program_tag_layout" />

            <ImageView
                android:id="@+id/menu_applications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_10dp"
                android:padding="@dimen/space5"
                android:src="@drawable/ic_vertical_menu" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>