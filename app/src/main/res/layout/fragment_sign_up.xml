<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/ablSelect"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/teall"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarDa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/teall"
                app:contentInsetStart="0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


                <RelativeLayout
                    android:id="@+id/rlYouHaveSaved"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_marginTop="@dimen/space30"
                        android:src="@drawable/back"
                        app:tint="@color/white" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="@dimen/space50"
                        android:layout_marginEnd="80dp"
                        android:src="@drawable/signup_logo" />


                    <RelativeLayout
                        android:id="@+id/corner1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@id/back"
                        android:layout_marginHorizontal="@dimen/space10"
                        android:layout_marginTop="@dimen/space170"
                        android:background="@drawable/home_back_fade">

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/corner2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_alignParentBottom="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/home_back"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/logintext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:text="@string/sign_up"
                            android:textColor="#0F0305"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/logintext"
                            android:layout_marginStart="20dp"
                            android:text="@string/get_started_with_email_or_phone_number"
                            android:textColor="@color/bottom_nav_grey"
                            android:textSize="12sp"
                            android:visibility="gone" />


                    </RelativeLayout>
                </RelativeLayout>


            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/nested"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/formContainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/space10"
                            android:layout_marginBottom="@dimen/_10dp"
                            android:orientation="vertical">


                        </LinearLayout>

                    </androidx.core.widget.NestedScrollView>

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>