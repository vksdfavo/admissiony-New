<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".fragments.setPrefrences.DisciplineFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:id="@+id/fabAc_back"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="6dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_back"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:fabCustomSize="32dp"
                app:maxImageSize="16dp"
                app:rippleColor="@color/rippleColor"
                app:tint="@color/tintColorToolbar" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/area_of_interest"
                android:textColor="@color/tintColorToolbar"
                android:textSize="16sp" />



        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/toolbar"
        android:weightSum="3"
        android:layout_height="@dimen/_20dp">

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/space5"
            android:layout_weight="1"
            android:background="@color/secondary_color"
            android:layout_height="@dimen/space3"/>

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/space5"
            android:layout_weight="1"
            android:background="@color/bottom_nav_grey"
            android:layout_height="@dimen/space3"/>

        <View
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/bottom_nav_grey"
            android:layout_height="@dimen/space3"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_title"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:text="@string/you_can_choose_multiple_interests" />

            <TextView
                android:id="@+id/tvSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:text="@string/skip"
                android:textColor="#666666"
                android:textSize="14sp" />
        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/disciplineRecyclerview"
            android:layout_width="match_parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            android:paddingEnd="0dp"
            android:clipToPadding="false"
            android:layout_marginStart="@dimen/space10"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_setprefrence"
            android:paddingBottom="80dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvNext2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="26dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_rectangle_all_radius_btn_yellow"
        android:elevation="1dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold" />


</RelativeLayout>