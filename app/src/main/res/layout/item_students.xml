<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:strokeColor="@color/snackFilterTextColor"
    app:strokeWidth="2dp">

    <RelativeLayout
        android:id="@+id/rlItemStudents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingStart="0dp"
        android:paddingTop="16dp"
        android:paddingEnd="0dp">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Student Id : "
                android:textColor="@color/hintApp"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvItemStudents_studentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv0"
                android:text="123456789"
                android:textColor="#406795"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvItemStudents_studentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv0"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Jax Teller"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvItemStudents_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvItemStudents_studentName"
                android:layout_alignStart="@id/tvItemStudents_studentName"
                android:layout_marginTop="8dp"

                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:text="Example@gmail.com"
                android:textColor="@color/hintApp"
                android:textSize="10sp"
                app:drawableStartCompat="@drawable/ic_email2" />

            <TextView
                android:id="@+id/tvItemStudents_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvItemStudents_email"
                android:layout_alignStart="@id/tvItemStudents_email"
                android:layout_marginStart="1dp"
                android:layout_marginTop="4dp"
                android:drawablePadding="6dp"
                android:text="Jalandhar, Punjab, India"
                android:textColor="@color/hintApp"
                android:textSize="10sp"
                app:drawableStartCompat="@drawable/ic_location" />


           <!-- <com.zegocloud.uikit.prebuilt.call.invite.widget.ZegoSendCallInvitationButton
                android:id="@+id/fabItemStudents_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="30dp"
                android:elevation="0dp"
                android:src="@drawable/ic_call"
                app:backgroundTint="@color/black"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:fabCustomSize="36dp"
                app:maxImageSize="16dp"
                app:tint="#25CF94" />-->
        </RelativeLayout>

        <TextView
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl"
            android:layout_marginTop="8dp"
            android:background="@color/dividerBackgroundColor" />

        <LinearLayout
            android:id="@+id/llItemStudents_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider1"
            android:orientation="horizontal"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:paddingTop="12dp"
                android:paddingBottom="14dp"
                android:text="Status : "
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvItemStudents_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:drawableTint="@color/black"
                android:paddingTop="12dp"
                android:paddingBottom="14dp"
                android:text="Started &amp; Submitted for options"
                android:textColor="#3D639D"
                android:textSize="12sp"
                app:drawableEndCompat="@drawable/ic_next3" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>