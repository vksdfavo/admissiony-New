<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="6dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/llItemSp2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_circle_white"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civItemSp2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/z_india"
            android:layout_marginTop="-2.5dp"
            android:padding="2dp" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civItemSp2_checked"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="-28dp"
        android:layout_toEndOf="@id/llItemSp2"
        android:src="@drawable/z_circle_checked"
        android:visibility="gone" />

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llItemSp2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Country Name"
        android:textColor="#212121"
        android:textSize="12sp" />
</RelativeLayout>