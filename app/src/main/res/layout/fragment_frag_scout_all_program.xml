<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civProfileImageFd2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="5dp"
                android:elevation="2dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/theme_color"
                android:src="@drawable/test_image" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/programs"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabFp_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:layout_toStartOf="@id/fabFp_notificationStu"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_heart"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:fabCustomSize="32dp"
                app:maxImageSize="20dp"
                app:rippleColor="@color/hint"
                app:tint="@color/tintColorToolbar" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabFp_heart2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:layout_toStartOf="@id/fabFp_notificationStu"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_heart2"
                android:visibility="gone"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:fabCustomSize="32dp"
                app:maxImageSize="20dp"
                app:rippleColor="@color/hint" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabFp_notificationStu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_notification"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:fabCustomSize="32dp"
                app:maxImageSize="21dp"
                app:rippleColor="@color/hint"
                app:tint="@color/tintColorToolbar" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civFp_unreadBadge"
                android:visibility="gone"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="3dp"
                android:elevation="2dp"
                android:src="@drawable/shape_circle_red" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/header_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_title"
            android:orientation="vertical"
            >

            <!-- Top Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineColor"
                android:layout_marginBottom="8dp"/>

            <RelativeLayout
                android:id="@+id/header_title21"
                android:layout_below="@id/header_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Search Bar Section -->
                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="4dp"
                    android:layout_toStartOf="@id/rll"
                    android:background="@drawable/shape_rectangle_all_radius_et_search">

                    <EditText
                        android:id="@+id/etFp_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="-4dp"
                        android:layout_toStartOf="@id/ibFp_search"
                        android:backgroundTint="@color/white"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:hint="Search"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hintApp"
                        android:textCursorDrawable="@drawable/cursor_black_et"
                        android:textSize="13sp" />

                    <ImageButton
                        android:id="@+id/ibFp_search"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/shape_rectangle_all_radius_btn_search"
                        android:padding="8dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    >

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabFpFilterStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="@color/white"
                        android:elevation="0dp"
                        android:src="@drawable/ic_filter"
                        app:backgroundTint="#151522"
                        app:borderWidth="1dp"
                        app:elevation="0dp"
                        app:fabCustomSize="36dp"
                        app:maxImageSize="16sp"
                        app:rippleColor="@color/hint" />

                    <View
                        android:id="@+id/filter_dot"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:elevation="10dp"
                        android:layout_gravity="top|end"
                        android:background="@drawable/shape_circle_filter"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/secondary_color"
                        android:visibility="gone"
                        android:layout_marginEnd="-4dp"
                        />

                </RelativeLayout>
            </RelativeLayout>
            <!-- Bottom Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineColor"
                android:layout_marginTop="8dp"/>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFpAp"
            android:layout_width="match_parent"
            tools:listitem="@layout/item_program_recom"
            android:layout_height="match_parent"
            android:layout_below="@+id/header_title2"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_above="@id/pbFpAp_pagination" />

        <ProgressBar
            android:id="@+id/pbFpAp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:id="@+id/llFpAp_noData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/no_applications" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="No Program Found"
                android:textColor="#151522"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/pbFpAp_pagination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout >