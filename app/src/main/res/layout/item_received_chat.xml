<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--    -->
    <RelativeLayout
        android:id="@+id/rlItemCo_userInfoBase1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!--        -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civItemCo_image1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/test_image4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/civItemCo_image1"
            android:orientation="vertical">

            <!--            -->
            <TextView
                android:id="@+id/tvItemCo_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="12sp" />

            <!--            -->
            <TextView
                android:id="@+id/tvItemCo_designation1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:text=""
                android:textColor="#666666"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

    <!--    -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2dp"
        android:elevation="3dp"
        android:paddingStart="@dimen/space10"
        android:background="@drawable/shape_rectangle_3_radius_opponent"
        android:backgroundTint="#fff2f1"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingEnd="12dp">


            <TextView
                android:id="@+id/tvItemCo_msg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="2dp"
                android:text="@string/app_name"
                android:layout_marginStart="@dimen/space15"
                android:textColor="@color/black"
                android:textSize="12sp" />


        </RelativeLayout>
    </LinearLayout>


    <!--    -->
    <TextView
        android:id="@+id/tvItemCo_time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:paddingTop="4dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp"
        android:text="10:10 am"
        android:textColor="#666666"
        android:textSize="8sp" />


</LinearLayout>