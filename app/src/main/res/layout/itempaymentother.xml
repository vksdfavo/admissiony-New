<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/cd_created"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/card_border_bg"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_visa_fee_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/visa_fee"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tv_applicationfee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cad_45"
                    android:layout_marginStart="20dp"
                    android:textSize="12sp"
                    android:layout_below="@+id/tv_visa_fee_label"
                    android:layout_marginBottom="@dimen/_20dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tvpaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ“ Paid"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:textSize="12sp"
                    android:paddingStart="@dimen/sp_10"
                    android:paddingEnd="@dimen/sp_10"
                    android:paddingTop="@dimen/sp_5"
                    android:visibility="gone"
                    android:paddingBottom="@dimen/sp_5"
                    android:background="@drawable/ic_paid_back"
                    android:layout_alignTop="@+id/tv_visa_fee_label"
                    android:textColor="@color/PopUpcolorPrimary"
                    />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:textSize="12sp"
                    android:paddingStart="@dimen/sp_10"
                    android:paddingEnd="@dimen/sp_10"
                    android:paddingTop="@dimen/sp_5"
                    android:paddingBottom="@dimen/sp_5"
                    android:background="@drawable/ic_paid_back"
                    android:layout_alignTop="@+id/tv_visa_fee_label"
                    android:textColor="@color/PopUpcolorPrimary"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <TextView
                    android:id="@+id/tv_view_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="Pay Now"
                    android:textAlignment="center"
                    android:background="@drawable/bg_payment_card"
                    android:textColor="@color/PopUpcolorPrimary"
                    android:textSize="12sp" />

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>