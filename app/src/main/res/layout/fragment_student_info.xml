            android:layout_gravity="center_vertical"
            android:src="@drawable/cake" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/sp15"
