    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/sp15"
        android:text="R: 6.0, L: 6.0,  W: 6.0 , L: 6.0"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="@dimen/space10"
        android:layout_marginVertical="@dimen/space10"
        android:background="@color/disabledTextColor" />



</LinearLayout>