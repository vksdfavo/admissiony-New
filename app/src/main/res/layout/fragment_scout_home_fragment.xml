<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llFdU_cards"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAFB"
    android:orientation="vertical"
    tools:context=".fragments.home.HomeFragment">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/ablSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondary_color"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarDa"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:layout_gravity="center"
                android:background="@color/secondary_color"
                app:contentInsetStart="0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


                <RelativeLayout
                    android:id="@+id/rlYouHaveSaved"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civProfileImageFd2"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_20dp"
                        android:src="@drawable/menu1" />


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchStu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="23dp"
                        android:layout_toEndOf="@+id/civProfileImageFd2"
                        android:background="@color/blank"
                        android:buttonTint="@color/hint"
                        android:elevation="4dp"
                        android:scaleX="1"
                        android:scaleY="1.1"
                        android:thumb="@drawable/switch_thumb"
                        app:elevation="4dp"
                        app:track="@drawable/switch_track" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabFp_heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20dp"
                        android:layout_marginEnd="4dp"
                        android:layout_toStartOf="@id/fabFp_notificationStu"
                        android:backgroundTint="@color/trasnsparent"
                        android:src="@drawable/ic_heart"
                        app:borderWidth="0dp"
                        app:elevation="0dp"
                        app:fabCustomSize="32dp"
                        app:maxImageSize="20dp"
                        app:rippleColor="@color/white"
                        app:tint="@color/white" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabFp_notificationStu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_20dp"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:backgroundTint="@color/trasnsparent"
                        android:src="@drawable/ic_notification"
                        app:borderWidth="0dp"
                        app:elevation="0dp"
                        app:fabCustomSize="32dp"
                        app:maxImageSize="21dp"
                        app:rippleColor="@color/white"
                        app:tint="@color/white" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civFp_unreadBadge"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/text22"
                        android:layout_marginEnd="15dp"
                        android:elevation="2dp"
                        android:src="@drawable/shape_circle_red"
                        android:tint="@color/theme_color" />

                    <RelativeLayout
                        android:id="@+id/corner1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/fabFp_notificationStu"
                        android:layout_marginHorizontal="@dimen/space10"
                        android:layout_marginTop="@dimen/space35"
                        android:layout_marginBottom="@dimen/space30"
                        android:background="@drawable/home_back_fade">

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/corner2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space50"
                        android:layout_below="@id/fabFp_notificationStu"
                        android:layout_marginTop="@dimen/space50"
                        android:background="@drawable/home_back">

                        <TextView
                            android:id="@+id/program_navigation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="16dp"
                            android:drawableEnd="@drawable/baseline_arrow_forward_24"
                            android:drawableTint="@color/secondary_color"
                            android:text="@string/get_university_admit_just_in_2_weeks"
                            android:textColor="@color/text_color"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:visibility="gone"
                            tools:ignore="UseCompatTextViewDrawableXml" />


                    </RelativeLayout>
                </RelativeLayout>


            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear"
        android:background="@drawable/gradient_scout_new"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Top Line -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/lineColor"
                    android:visibility="gone" />

                <!-- Search Bar Section -->
                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape_rectangle_all_radius_et_search"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/etFp_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="-4dp"
                        android:layout_toStartOf="@id/ibFp_search"
                        android:backgroundTint="@color/white"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:hint="Search"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hintApp"
                        android:textCursorDrawable="@drawable/cursor_black_et"
                        android:textSize="13sp" />

                    <ImageButton
                        android:id="@+id/ibFp_search"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/shape_rectangle_all_radius_btn_search"
                        android:padding="8dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/white" />
                </RelativeLayout>

                <!-- Bottom Line -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/lineColor"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Signed up Students -->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_simple_card"
                        android:elevation="0dp">

                        <ImageView
                            android:id="@+id/icon_signed_up"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/signed_up"
                            app:tint="#C74B3E" />

                        <ImageView
                            android:id="@+id/info_signed_up"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:elevation="4dp"
                            android:src="@drawable/ic_infoo" />

                        <TextView
                            android:id="@+id/tv_signed_up_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon_signed_up"
                            android:layout_marginTop="10dp"
                            android:text="Signed up \nStudents"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_signed_up_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_signed_up_title"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="20dp" />
                    </RelativeLayout>

                    <!-- Total Applications -->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_simple_card"
                        android:elevation="0dp">

                        <ImageView
                            android:id="@+id/icon_total_app"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/total_app"
                            app:tint="#C6741C" />

                        <ImageView
                            android:id="@+id/info_total_app"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_infoo" />

                        <TextView
                            android:id="@+id/tv_total_app_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon_total_app"
                            android:layout_marginTop="10dp"
                            android:text="Total \nApplications"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_total_app_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_total_app_title"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="20dp" />
                    </RelativeLayout>
                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Potential Earned -->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:elevation="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_simple_card">

                        <ImageView
                            android:id="@+id/icon_potential"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/potential"
                            app:tint="#D1A046" />

                        <ImageView
                            android:id="@+id/info_potential"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_infoo" />

                        <TextView
                            android:id="@+id/tv_potential_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon_potential"
                            android:layout_marginTop="10dp"
                            android:text="Potential \nEarned (USD)"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_potential_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_potential_title"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="20dp" />
                    </RelativeLayout>

                    <!-- Earned Amount -->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:elevation="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_simple_card">

                        <ImageView
                            android:id="@+id/icon_earned"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/earned_app"
                            app:tint="#CA4A55" />

                        <ImageView
                            android:id="@+id/info_earned"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_infoo" />

                        <TextView
                            android:id="@+id/tv_earned_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/icon_earned"
                            android:layout_marginTop="10dp"
                            android:text="Earned \nAmount (USD)"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_earned_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_earned_title"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="20dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="26dp"
                    android:text="@string/latest_study_abroad_updates"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <!-- Spacer to push the button to the end -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnLatestTudy_viewAll"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:layout_marginEnd="6dp"
                    android:text="@string/view_all"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLatestStudyStu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingStart="6dp"
                android:paddingEnd="10dp"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_latest_study" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16sp"
                android:text="@string/refer_amp_earn"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/loggo"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/llMaReferEarn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="30dp"
                    android:gravity="bottom"
                    app:cardCornerRadius="12dp">

                    <ImageView
                        android:id="@+id/cdReferEarn"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/refer"
                        android:visibility="gone"
                        app:cardCornerRadius="12dp" />

                    <ImageView
                        android:id="@+id/ivItemDashboardItem2"
                        android:layout_width="match_parent"
                        android:layout_height="145dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_refer" />


                </RelativeLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:elevation="4dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="@string/ambassador_community_manager"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imgview"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/test_image" />

                            <TextView
                                android:id="@+id/tvFdStu_coordinator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/imgview"
                                android:text="@string/contact_your_coordinator"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvFdStu_coordinator_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvFdStu_coordinator"
                                android:layout_marginTop="4dp"
                                android:layout_toEndOf="@id/imgview"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fabFdStu_coordinatorcall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="16dp"
                                android:padding="10dp"
                                android:src="@drawable/call"
                                android:tint="@color/white"
                                app:backgroundTint="@color/secondary_color"
                                app:elevation="0dp"
                                app:fabCustomSize="40dp" />


                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:background="@color/dividerBackgroundColor" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>

