<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/ablFd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rlYouHaveSaved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civF_applications"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:visibility="gone"
                        android:elevation="2dp"
                        android:src="@drawable/test_image" />

                    <TextView
                        android:id="@+id/tvApd_collegeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/civF_applications"
                        android:layout_alignBottom="@id/civF_applications"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/applications"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabFa_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/ic_notification"
                        app:borderWidth="0dp"
                        app:elevation="0dp"
                        app:fabCustomSize="32dp"
                        app:maxImageSize="21dp"
                        app:rippleColor="@color/hint"
                        app:tint="@color/tintColorToolbar" />



                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_below="@id/rlYouHaveSaved"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/shape_rectangle_all_radius_et_search">

                    <EditText
                        android:id="@+id/etsearch"
                        android:layout_width="334dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="-8dp"
                        android:layout_toStartOf="@id/ibFd_searchStudent"
                        android:backgroundTint="@color/white"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:hint="@string/search"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hintApp"
                        android:textCursorDrawable="@drawable/cursor_black_et"
                        android:textSize="12sp" />

                    <ImageButton
                        android:id="@+id/ibFd_searchStudent"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_rectangle_all_radius_btn_search"
                        android:padding="8dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/white" />



                </RelativeLayout>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tlFa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl1"
                    app:tabBackground="@color/white"
                    app:tabIndicatorHeight="5dp"
                    app:tabMode="fixed"
                    app:tabIndicatorFullWidth="true"
                    app:tabSelectedTextColor="@color/black"
                    app:tabTextAppearance="@style/CustomTabLayout"
                    app:tabTextColor="@color/viewAllTextColor">


                </com.google.android.material.tabs.TabLayout>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpFa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ablFd"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_create_application"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/theme_color"
        android:src="@drawable/ic_add2"
        android:tint="@color/black"
        app:borderWidth="0dp"
        app:rippleColor="@color/hint" />
</RelativeLayout>