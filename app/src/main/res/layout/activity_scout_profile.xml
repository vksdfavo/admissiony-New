<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.ProfileActivity"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDa"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/my_profile"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabFp_heart2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_heart2"
                android:visibility="gone"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:fabCustomSize="32dp"
                app:maxImageSize="20dp"
                app:rippleColor="@color/hint" />

            <ImageView
                android:id="@+id/tv_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_settings"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:fabCustomSize="32dp"
                android:layout_marginEnd="10dp"
                app:maxImageSize="21dp"
                app:rippleColor="@color/hint"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civFp_unreadBadge"
                android:visibility="gone"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="3dp"
                android:elevation="2dp"
                android:src="@drawable/shape_circle_red" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/toolbarDa"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civMyProfile"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginVertical="26dp"
                        android:layout_marginStart="26dp"
                        android:src="@drawable/test_image" />

                    <ProgressBar
                        android:id="@+id/pbMp_civ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="32dp"
                        android:visibility="gone" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabMyProfile_changePic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/civMyProfile"
                        android:layout_marginStart="22dp"
                        android:visibility="gone"
                        android:layout_marginTop="-44dp"
                        android:elevation="0dp"
                        android:src="@drawable/ic_edit"
                        app:backgroundTint="@color/white"
                        app:borderWidth="0dp"
                        app:elevation="2dp"
                        app:fabCustomSize="24dp"
                        app:maxImageSize="12dp"
                        app:tint="@color/black" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/civMyProfile"
                        android:layout_alignBottom="@id/civMyProfile"
                        android:layout_marginStart="10sp"
                        android:layout_toEndOf="@id/civMyProfile"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvMyProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-----"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvMyProfile_role"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-8dp"
                            android:text="@string/ambassador"
                            android:textSize="10sp" />
                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:text="@string/ambassador_id"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvStaffId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="-4dp"
                    android:text="XXXXXXXX"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:text="@string/contact_number"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvMyProfile_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="-4dp"
                    android:text="+XX XXXXX-XXXXX"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/email_address"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvMyProfile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="-4dp"
                    android:text="-----------------" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/date_of_birth"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvMyProfile_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="-4dp"
                    android:text="XX-XX-XXXX" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/dividerBackgroundColor" />

                <Button
                    android:id="@+id/btnSwitchAccount"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Switch to Role"
                    android:textAllCaps="false"
                    android:textColor="#1467C5" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26sp"
                android:visibility="gone"
                android:text="Profile"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                android:visibility="gone"
                android:text="@string/yourProfileIs"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvScoutBasicInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_rectangle_pressed_white"
                android:drawableStart="@drawable/ic_p1"
                android:drawableEnd="@drawable/ic_next3"
                android:drawablePadding="8dp"
                android:drawableTint="@color/black"
                android:padding="10sp"
                android:paddingEnd="18dp"
                android:text="@string/basic_information"
                android:textColor="#151522" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerBackgroundColor" />

            <TextView
                android:id="@+id/tv_bank_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:paddingEnd="22sp"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_p2"
                android:text="@string/bank_details"
                android:drawableTint="@color/black"
                app:drawableEndCompat="@drawable/ic_next3"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerBackgroundColor" />

            <TextView
                android:id="@+id/tvDocuments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/shape_rectangle_pressed_white"
                android:drawableStart="@drawable/ic_p3"
                android:drawableEnd="@drawable/ic_next3"
                android:drawablePadding="8dp"
                android:drawableTint="@color/black"
                android:padding="10sp"
                android:paddingEnd="18dp"
                android:text="My Documents"
                android:textColor="#151522" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dividerBackgroundColor" />

            <TextView
                android:id="@+id/tvmyTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rectangle_pressed_white"
                android:drawableStart="@drawable/ic_p5"
                android:visibility="gone"
                android:drawableEnd="@drawable/ic_next3"
                android:drawablePadding="8dp"
                android:drawableTint="@color/black"
                android:padding="10sp"
                android:paddingEnd="18dp"
                android:text="My Transactions"
                android:textColor="#151522" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/dividerBackgroundColor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/dividerBackgroundColor" />


        </LinearLayout>

    </ScrollView>
    <ProgressBar
        android:id="@+id/pbDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminate="true"
        android:layout_centerInParent="true" />

</RelativeLayout>