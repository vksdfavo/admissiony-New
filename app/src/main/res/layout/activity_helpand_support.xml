<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ablSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabFp_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="6dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_back"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    app:fabCustomSize="32dp"
                    app:maxImageSize="16dp"
                    app:rippleColor="@color/rippleColor"
                    app:tint="@color/tintColorToolbar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/contact_us"
                    android:textColor="@color/tintColorToolbar"
                    android:textSize="18sp" />


            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/rll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ablSelect">

        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/subject"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:textColor="@color/tintColorToolbar"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etFwm_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_rectangle_all_radius_et_login"
            android:gravity="top"
            android:layout_below="@+id/subject"
            android:layout_margin="15dp"
            android:hint="@string/enter_subject"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:maxLength="234"
            android:paddingHorizontal="14sp"
            android:paddingVertical="12dp"
            android:textSize="13sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rll1">

        <TextView
            android:id="@+id/Message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/message"
            android:layout_marginStart="20dp"
            android:textColor="@color/tintColorToolbar"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etFwm_message"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_rectangle_all_radius_et_login"
            android:gravity="top"
            android:layout_below="@+id/Message"
            android:layout_margin="15dp"
            android:hint="@string/write_message_here"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:maxLength="234"
            android:paddingHorizontal="14sp"
            android:paddingVertical="12dp"
            android:textSize="13sp" />

    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_download"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/rll2"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_rectangle_all_radius_btn_yellow"
        android:elevation="2dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</RelativeLayout>